<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    <!-- - 메인 리니어 레이아웃 변환 -->

    <!--  -->
    <!-- LinearLayout  밑으로 TableLayout 생성 -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"> <!-- android:stretchColumns="*" 속성 지정 -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!-- TableRow 밑으로 이미지버튼 추가 및 id 부여 (id: teamBtn(n)) -->
            <ImageButton
                android:id="@+id/teamBtn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>
            <ImageButton
                android:id="@+id/teamBtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>
            <ImageButton
                android:id="@+id/teamBtn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>
            <ImageButton
                android:id="@+id/teamBtn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>
            <ImageButton
                android:id="@+id/teamBtn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>

            <ImageButton
                android:id="@+id/teamBtn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></ImageButton>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/teamBtn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>
            <ImageButton
                android:id="@+id/teamBtn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>
            <ImageButton
                android:id="@+id/teamBtn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>
            <ImageButton
                android:id="@+id/teamBtn10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>
            <ImageButton
                android:id="@+id/teamBtn11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>
            <ImageButton
                android:id="@+id/teamBtn12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ImageButton>

        </TableRow>
    </TableLayout>

    <!-- TabHost 추가 -->
    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Tab 내용 및 id (id : tabSchedule, tabRoster) -->
                <LinearLayout
                    android:id="@+id/tabSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- TabHost 스케쥴 레이아웃에 이미지뷰 위젯 추가 (이미지뷰 메치페런트로 설정 추후 조정 필요) -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabRoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- TabHost 로스터 레이아웃에 스크롤뷰 추가 -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </ScrollView>

                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>